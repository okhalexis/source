-- POSIÃ‡Ã•ES EXATAS DOS GAPS (tudo alinhado na Z = -14.0)
local GapPositions = {
    { Index = 1,  Name = "Common",    X = 199.9,  Y = -2.7, Z = -14.0 },
    { Index = 2,  Name = "Uncommon",  X = 283.3,  Y = -2.7, Z = -14.0 },
    { Index = 3,  Name = "Rare",      X = 397.2,  Y = -2.7, Z = -14.0 },
    { Index = 4,  Name = "Epic",      X = 542.4,  Y = -2.7, Z = -14.0 },
    { Index = 5,  Name = "Legendary", X = 757.4,  Y = -2.7, Z = -14.0 },
    { Index = 6,  Name = "Mythical",  X = 1072.3, Y = -2.7, Z = -14.0 },
    { Index = 7,  Name = "Cosmic",    X = 1549.3, Y = -2.7, Z = -14.0 },
    { Index = 8,  Name = "Secret",    X = 2252.6, Y = -2.7, Z = -14.0 },
    { Index = 9,  Name = "Final",     X = 2599.1, Y = -2.7, Z = -14.0 },
}

local AutoGapState = {
    Enabled = false,
    TargetGapIndex = nil,
    CurrentGapIndex = 1,
    IsFlying = false,
    AutoFlyVelocity = nil,
    AutoFlyGyro = nil,
}

local AUTO_FLY_SPEED = 220
local WAVE_DETECTION_RANGE = 30
local ARRIVAL_DISTANCE = 2   -- margem pequena pra parar perto e depois snap

----------------------------------------------------
-- WAVE DETECTOR
----------------------------------------------------
local WaveDetector = {}

local wavesCache = {}
local lastWaveScan = 0
local WAVE_SCAN_INTERVAL = 0.5

function WaveDetector.ScanAllWaves()
    local currentTime = tick()
    if currentTime - lastWaveScan < WAVE_SCAN_INTERVAL then
        return wavesCache
    end

    lastWaveScan = currentTime
    wavesCache = {}

    for _, obj in ipairs(workspace:GetChildren()) do
        local name = obj.Name:lower()

        if name:find("tsunami") or 
           name:find("wave") or 
           name:find("water") or 
           name:find("snake") or 
           name:find("wacky") or
           name:find("flood") then

            local part = nil
            if obj:IsA("Model") then
                part = obj.PrimaryPart or obj:FindFirstChildWhichIsA("BasePart")
            elseif obj:IsA("BasePart") then
                part = obj
            end

            if part then
                table.insert(wavesCache, {
                    Name = obj.Name,
                    Position = part.Position,
                })
            end
        end
    end

    return wavesCache
end

function WaveDetector.HasWaveNearby(playerPos)
    local waves = WaveDetector.ScanAllWaves()

    if #waves == 0 then
        return false
    end

    for _, wave in ipairs(waves) do
        local wavePos = wave.Position
        local distance = (wavePos - playerPos).Magnitude

        if distance <= WAVE_DETECTION_RANGE then
            print(string.format("[Wave Detector] ðŸš¨ Wave nearby! Distance: %.1f studs", distance))
            return true, distance
        end
    end

    return false
end

----------------------------------------------------
-- AUTO LEVITATION / FLY
----------------------------------------------------
local AutoFly = {}

function AutoFly.Start()
    if AutoGapState.IsFlying then return true end

    local hrp = getHumanoidRootPart()
    local hum = getHumanoid()
    if not hrp or not hum then return false end

    AutoGapState.IsFlying = true
    hum.PlatformStand = true

    AutoGapState.AutoFlyVelocity = Instance.new("BodyVelocity")
    AutoGapState.AutoFlyVelocity.MaxForce = Vector3.new(1e5, 1e5, 1e5)
    AutoGapState.AutoFlyVelocity.Velocity = Vector3.zero
    AutoGapState.AutoFlyVelocity.Parent = hrp

    AutoGapState.AutoFlyGyro = Instance.new("BodyGyro")
    AutoGapState.AutoFlyGyro.MaxTorque = Vector3.new(1e5, 1e5, 1e5)
    AutoGapState.AutoFlyGyro.P = 9e4
    AutoGapState.AutoFlyGyro.CFrame = hrp.CFrame
    AutoGapState.AutoFlyGyro.Parent = hrp

    print("[Auto Fly] Levitation ON (220)")
    return true
end

function AutoFly.Stop()
    if not AutoGapState.IsFlying then return end

    AutoGapState.IsFlying = false

    local hum = getHumanoid()
    if hum then hum.PlatformStand = false end

    if AutoGapState.AutoFlyVelocity then
        AutoGapState.AutoFlyVelocity:Destroy()
        AutoGapState.AutoFlyVelocity = nil
    end

    if AutoGapState.AutoFlyGyro then
        AutoGapState.AutoFlyGyro:Destroy()
        AutoGapState.AutoFlyGyro = nil
    end

    print("[Auto Fly] Levitation OFF")
end

function AutoFly.FlyToPosition(targetPos)
    local hrp = getHumanoidRootPart()
    if not hrp then return false end

    local currentPos = hrp.Position
    local offset = (targetPos - currentPos)
    if offset.Magnitude < 0.001 then
        if AutoGapState.AutoFlyVelocity then
            AutoGapState.AutoFlyVelocity.Velocity = Vector3.zero
        end
        return true
    end

    local dir = offset.Unit
    local vel = dir * AUTO_FLY_SPEED

    if AutoGapState.AutoFlyVelocity then
        AutoGapState.AutoFlyVelocity.Velocity = vel
    end

    if AutoGapState.AutoFlyGyro then
        AutoGapState.AutoFlyGyro.CFrame = CFrame.lookAt(currentPos, targetPos)
    end

    return true
end

function AutoFly.HasArrived(targetPos)
    local hrp = getHumanoidRootPart()
    if not hrp then return false end
    local dist = (hrp.Position - targetPos).Magnitude
    return dist <= ARRIVAL_DISTANCE
end

function AutoFly.PauseInPlace()
    if AutoGapState.AutoFlyVelocity then
        AutoGapState.AutoFlyVelocity.Velocity = Vector3.zero
    end
end

----------------------------------------------------
-- MAIN LOOP GAP 1 -> TARGET, PARANDO EXATO NAS COORDS
----------------------------------------------------
local autoFarmCoroutine = nil

local function getGapByIndex(idx)
    for _, gap in ipairs(GapPositions) do
        if gap.Index == idx then
            return gap
        end
    end
end

local function snapToExactPosition(targetPos)
    local hrp = getHumanoidRootPart()
    local hum = getHumanoid()
    if not hrp or not hum then return end

    AutoFly.PauseInPlace()
    AutoFly.Stop()

    hrp.CFrame = CFrame.new(targetPos)
    hrp.Velocity = Vector3.zero
end

local function autoFarmLoop()
    print("[Auto Farm] Gap-by-gap levitation started")

    PlayerFlags.NoClipEnabled = true
    if not AutoFly.Start() then
        print("[Auto Farm] Failed to start levitation")
        PlayerFlags.NoClipEnabled = false
        disableFullNoClip()
        return
    end

    AutoGapState.CurrentGapIndex = 1

    while AutoGapState.Enabled do
        local hrp = getHumanoidRootPart()
        if not hrp then
            task.wait(0.5)
            continue
        end

        if AutoGapState.CurrentGapIndex > AutoGapState.TargetGapIndex then
            print("[Auto Farm] Reached final gap index")

            PlayerFlags.NoClipEnabled = false
            disableFullNoClip()

            WindUI:Notify({
                Title   = "Auto Farm",
                Content = "Reached final gap and holding exact position.",
                Duration= 3,
                Icon    = "check-circle",
            })

            AutoGapState.Enabled = false
            break
        end

        local currentGap = getGapByIndex(AutoGapState.CurrentGapIndex)
        if not currentGap then
            print("[Auto Farm] Gap index not found:", AutoGapState.CurrentGapIndex)
            task.wait(0.5)
            continue
        end

        local targetPos = Vector3.new(currentGap.X, currentGap.Y, currentGap.Z)

        local hasWave, waveDistance = WaveDetector.HasWaveNearby(hrp.Position)

        if hasWave then
            AutoFly.PauseInPlace()
            print(string.format(
                "[Auto Farm] Wave %.1f studs - waiting at Gap %d (%s)",
                waveDistance, AutoGapState.CurrentGapIndex, currentGap.Name
            ))
            task.wait(1)
        else
            if AutoFly.HasArrived(targetPos) then
                snapToExactPosition(targetPos)

                print(string.format(
                    "[Auto Farm] Arrived EXACT at Gap %d (%s)",
                    AutoGapState.CurrentGapIndex, currentGap.Name
                ))

                WindUI:Notify({
                    Title   = "Auto Farm",
                    Content = string.format("Gap %d: %s (exact position)", AutoGapState.CurrentGapIndex, currentGap.Name),
                    Duration= 2,
                    Icon    = "map-pin",
                })

                AutoGapState.CurrentGapIndex += 1
                if AutoGapState.CurrentGapIndex <= AutoGapState.TargetGapIndex then
                    AutoFly.Start()
                end
                task.wait(0.3)
            else
                AutoFly.FlyToPosition(targetPos)
            end
        end

        task.wait(0.05)
    end

    AutoFly.Stop()
    PlayerFlags.NoClipEnabled = false
    disableFullNoClip()
    print("[Auto Farm] Stopped")
end

----------------------------------------------------
-- UI CONTROLS AUTO FARM
----------------------------------------------------
local function getAreaNames()
    local names = {}
    for _, gap in ipairs(GapPositions) do
        table.insert(names, gap.Name)
    end
    return names
end

AutoFarmSection:Dropdown({
    Title  = "Select Target Area",
    Desc   = "Gap 1 -> Target area",
    Icon   = "map-pin",
    Values = getAreaNames(),
    Value  = nil,
    Callback = function(value)
        for _, gap in ipairs(GapPositions) do
            if gap.Name == value then
                AutoGapState.TargetGapIndex = gap.Index

                print(string.format("[Auto Farm] Target: %s (Gap %d)", gap.Name, gap.Index))

                WindUI:Notify({
                    Title   = "Auto Farm",
                    Content = string.format("Target: %s (Gap %d)", value, gap.Index),
                    Duration= 3,
                    Icon    = "target",
                })
                break
            end
        end
    end
})

AutoFarmSection:Toggle({
    Title = "Start Auto Farm",
    Desc  = "Gap 1â†’Target (levitating 220, exact coords)",
    Icon  = "play",
    Value = false,
    Callback = function(state)
        AutoGapState.Enabled = state

        if state then
            if not AutoGapState.TargetGapIndex then
                WindUI:Notify({
                    Title   = "Auto Farm",
                    Content = "Select target area first.",
                    Duration= 3,
                    Icon    = "alert-triangle",
                })
                AutoGapState.Enabled = false
                return
            end

            WindUI:Notify({
                Title   = "Auto Farm",
                Content = string.format("Gap 1 -> Gap %d | Speed 220 | Exact coords", AutoGapState.TargetGapIndex),
                Duration= 4,
                Icon    = "rocket",
            })

            if autoFarmCoroutine then
                task.cancel(autoFarmCoroutine)
            end
            autoFarmCoroutine = task.spawn(autoFarmLoop)
        else
            AutoFly.Stop()
            PlayerFlags.NoClipEnabled = false
            disableFullNoClip()

            if autoFarmCoroutine then
                task.cancel(autoFarmCoroutine)
                autoFarmCoroutine = nil
            end

            WindUI:Notify({
                Title   = "Auto Farm",
                Content = "Stopped (No Clip OFF).",
                Duration= 3,
                Icon    = "square",
            })
        end
    end
})

