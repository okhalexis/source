----------------------------------------------------
local FarmSection = Tabs.Farm:Section({
    Title = "Farm Engine",
    Box = true,
    Opened = true,
})

FarmSection:Toggle({
    Title = "Instant Steal",
    Desc  = "Coleta imediata (Sem segurar E).",
    Icon  = "zap",
    Value = false,
    Callback = function(state)
        PlayerFlags.InstantSteal = state
    end
})

