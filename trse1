local AutoGapSection = Tabs.Farm:Section({
    Title  = "üß≠ Auto Gap",
    Icon   = "navigation",
    Box    = true,
    Opened = true,
})

-- Config de gaps com CFrames (voc√™ popula com os valores do mapa)
local GapDatabase = {
    { Name = "Common",    Gaps = {} },
    { Name = "Uncommon",  Gaps = {} },
    { Name = "Rare",      Gaps = {} },
    { Name = "Epic",      Gaps = {} },
    { Name = "Legendary", Gaps = {} },
    { Name = "Mythical",  Gaps = {} },
    { Name = "Cosmic",    Gaps = {} },
    { Name = "Secret",    Gaps = {} },
    { Name = "Celestial", Gaps = {} },
}

local AutoGapState = {
    Enabled        = false,
    SelectedArea   = nil,
    SafeDistance   = 120,
    CurrentGapIdx  = 1,
    WaitForWave    = false,
}

local function getAreaNames()
    local t = {}
    for _, area in ipairs(GapDatabase) do
        table.insert(t, area.Name)
    end
    return t
end

local function getAreaByName(name)
    for _, area in ipairs(GapDatabase) do
        if area.Name == name then
            return area
        end
    end
end

AutoGapSection:Label({
    Title = "‚ö†Ô∏è Note:",
    Desc  = "Enable God Mode & NoClip while using Auto Gap!",
    Icon  = "alert-triangle",
    Color = Color3.fromHex("#ef4444"),
})

AutoGapSection:Dropdown({
    Title  = "Select Area",
    Desc   = "Choose which area gaps to navigate (Common ‚Üí Celestial).",
    Values = getAreaNames(),
    Value  = nil,
    Callback = function(value)
        AutoGapState.SelectedArea = value
        AutoGapState.CurrentGapIdx = 1
        WindUI:Notify({
            Title   = "Auto Gap",
            Content = "Selected area: " .. tostring(value),
            Duration= 3,
            Icon    = "map-pin",
        })
    end
})

AutoGapSection:Slider({
    Title = "Safe Distance",
    Desc  = "Minimum safe distance from tsunami before moving to next gap (studs).",
    Step  = 10,
    Value = { Min = 50, Max = 300, Default = 120 },
    Callback = function(value)
        AutoGapState.SafeDistance = value
    end
})

AutoGapSection:Toggle({
    Title = "Enable Auto Gap",
    Desc  = "Automatically navigate between gaps, avoiding tsunami waves.",
    Icon  = "navigation",
    Value = false,
    Callback = function(state)
        AutoGapState.Enabled = state
        WindUI:Notify({
            Title   = "Auto Gap",
            Content = state and "Auto Gap enabled." or "Auto Gap disabled.",
            Duration= 3,
            Icon    = "navigation",
        })
    end
})

-- Helpers Auto Gap
local function findTsunami()
    for _, obj in ipairs(workspace:GetChildren()) do
        local n = obj.Name:lower()
        if (n:find("tsunami") or n:find("wave")) and (obj:IsA("Model") or obj:IsA("BasePart")) then
            return obj
        end
    end
end

local function getTsunamiPrimaryPart(tsunami)
    if not tsunami then return end
    if tsunami:IsA("BasePart") then
        return tsunami
    elseif tsunami:IsA("Model") then
        return tsunami.PrimaryPart or tsunami:FindFirstChildWhichIsA("BasePart")
    end
end

local function getTsunamiInfo()
    local tsunami = findTsunami()
    local part = getTsunamiPrimaryPart(tsunami)
    if not part then return nil, nil end
    local pos = part.Position
    local vel = part.AssemblyLinearVelocity or Vector3.zero
    return pos, vel
end

local function estimateCollisionTime(tsunamiPos, tsunamiVel, targetPos)
    if not tsunamiPos or not tsunamiVel or not targetPos then return math.huge end
    local dirZ = tsunamiVel.Z
    if math.abs(dirZ) < 1 then return math.huge end
    local distZ = targetPos.Z - tsunamiPos.Z
    if (dirZ > 0 and distZ < 0) or (dirZ < 0 and distZ > 0) then
        return math.huge
    end
    local speedZ = math.abs(dirZ)
    return math.abs(distZ) / speedZ
end

local function estimateTravelTime(fromPos, toPos)
    local dist = (toPos - fromPos).Magnitude
    local speed = math.max(PlayerFlags.FlySpeed or 50, 1)
    return dist / speed
end

local AutoGapVel

local function ensureAutoGapVelocity()
    local hrp = getHumanoidRootPart()
    if not hrp then return end
    if AutoGapVel and AutoGapVel.Parent ~= hrp then
        AutoGapVel:Destroy()
        AutoGapVel = nil
    end
    if not AutoGapVel then
        AutoGapVel = Instance.new("BodyVelocity")
        AutoGapVel.MaxForce = Vector3.new(1e5, 1e5, 1e5)
        AutoGapVel.Velocity = Vector3.zero
        AutoGapVel.Parent = hrp
    end
    return AutoGapVel, hrp
end

local function stopAutoGapVelocity()
    if AutoGapVel then
        AutoGapVel.Velocity = Vector3.zero
    end
end

-- Loop principal Auto Gap
RunService.Heartbeat:Connect(function(dt)
    if not AutoGapState.Enabled then
        stopAutoGapVelocity()
        return
    end

    if not AutoGapState.SelectedArea then
        stopAutoGapVelocity()
        return
    end

    local area = getAreaByName(AutoGapState.SelectedArea)
    if not area or #area.Gaps == 0 then
        stopAutoGapVelocity()
        return
    end

    local bodyVel, hrp = ensureAutoGapVelocity()
    if not bodyVel or not hrp then
        return
    end

    local gaps = area.Gaps
    local idx  = math.clamp(AutoGapState.CurrentGapIdx, 1, #gaps)
    local currentGapCF = gaps[idx]
    if typeof(currentGapCF) ~= "CFrame" then
        stopAutoGapVelocity()
        return
    end

    local hrpPos = hrp.Position
    local targetPos = currentGapCF.Position
    local distToGap = (targetPos - hrpPos).Magnitude
    local insideGap = distToGap < 6

    local tsunamiPos, tsunamiVel = getTsunamiInfo()

    if not insideGap then
        local dir = (targetPos - hrpPos).Unit
        local speed = PlayerFlags.FlySpeed or 50
        bodyVel.Velocity = dir * speed
        return
    end

    local nextIdx = idx + 1
    if nextIdx > #gaps then
        stopAutoGapVelocity()
        return
    end

    local nextGapCF = gaps[nextIdx]
    if typeof(nextGapCF) ~= "CFrame" then
        stopAutoGapVelocity()
        return
    end

    local nextPos = nextGapCF.Position
    local timeToNextGap = estimateTravelTime(hrpPos, nextPos)
    local timeWaveToNext = estimateCollisionTime(tsunamiPos, tsunamiVel, nextPos)

    local safeSpeed = math.max(math.abs((tsunamiVel and tsunamiVel.Z) or 0), 1)
    local safeMargin = AutoGapState.SafeDistance / safeSpeed

    local canGo = (timeToNextGap + safeMargin) < timeWaveToNext

    if canGo then
        AutoGapState.CurrentGapIdx = nextIdx
        local dir = (nextPos - hrpPos).Unit
        local speed = PlayerFlags.FlySpeed or 50
        bodyVel.Velocity = dir * speed
    else
        stopAutoGapVelocity()
    end
end)

