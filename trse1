-- AUTO GAP SYSTEM - CORRIGIDO COM NOMES DAS ÃREAS
----------------------------------------------------
local AutoGapSection = Tabs.Farm:Section({
    Title  = "Auto Gap",
    Icon   = "navigation",
    Box    = true,
    Opened = true,
})

-- Gap 1 = Common, Gap 2 = Uncommon, etc.
local GapDatabase = {
    { Index = 1, Name = "Common",    Position = nil },
    { Index = 2, Name = "Uncommon",  Position = nil },
    { Index = 3, Name = "Rare",      Position = nil },
    { Index = 4, Name = "Epic",      Position = nil },
    { Index = 5, Name = "Legendary", Position = nil },
    { Index = 6, Name = "Mythical",  Position = nil },
    { Index = 7, Name = "Cosmic",    Position = nil },
    { Index = 8, Name = "Secret",    Position = nil },
    { Index = 9, Name = "Celestial", Position = nil },
}

local AutoGapState = {
    Enabled        = false,
    SelectedArea   = nil,
    WaitingForWave = false,
}

-- DETECÃ‡ÃƒO DE WAVE MELHORADA
local WaveDetector = {}

function WaveDetector.GetAllWaves()
    local waves = {}
    
    -- MÃ©todo 1: Por atributo
    if workspace:GetAttribute("SnakeWavesActive") == true or workspace:GetAttribute("WackyWavesActive") == true then
        for _, obj in workspace:GetChildren() do
            local name = obj.Name:lower()
            if (name:find("snake") or name:find("wacky") or name:find("wave")) and (obj:IsA("Model") or obj:IsA("BasePart")) then
                table.insert(waves, obj)
            end
        end
    end
    
    -- MÃ©todo 2: Por nome
    for _, obj in workspace:GetChildren() do
        local name = obj.Name:lower()
        if (name:find("tsunami") or name:find("wave") or name:find("water")) and (obj:IsA("Model") or obj:IsA("BasePart")) then
            local alreadyAdded = false
            for _, w in waves do
                if w == obj then alreadyAdded = true break end
            end
            if not alreadyAdded then
                table.insert(waves, obj)
            end
        end
    end
    
    -- MÃ©todo 3: Por velocidade alta
    for _, obj in workspace:GetDescendants() do
        if obj:IsA("BasePart") and not obj.Anchored then
            local vel = obj.AssemblyLinearVelocity
            if vel and vel.Magnitude > 20 then
                local alreadyAdded = false
                for _, w in waves do
                    if w == obj then alreadyAdded = true break end
                end
                if not alreadyAdded then
                    table.insert(waves, obj)
                end
            end
        end
    end
    
    return waves
end

function WaveDetector.GetPrimaryPart(obj)
    if not obj then return nil end
    if obj:IsA("BasePart") then return obj end
    if obj:IsA("Model") then
        return obj.PrimaryPart or obj:FindFirstChildWhichIsA("BasePart")
    end
    return nil
end

function WaveDetector.IsWaveDangerous(wavePos, playerPos, safeDistance)
    if not wavePos or not playerPos then return false end
    
    local dist = (wavePos - playerPos).Magnitude
    return dist < safeDistance
end

function WaveDetector.IsWaveApproaching(wavePos, waveVel, playerPos)
    if not wavePos or not waveVel or not playerPos then return false end
    
    local toPlayer = (playerPos - wavePos).Unit
    local waveDir = waveVel.Unit
    
    local dot = toPlayer:Dot(waveDir)
    
    return dot > 0.5
end

-- Scanner de gaps
local GapScanner = {}

function GapScanner.ScanAllGaps()
    print("[Auto Gap] ðŸ” Scanning for gaps...")
    
    local foundGaps = {}
    
    -- Procura por tags primeiro
    for _, obj in CollectionService:GetTagged("Gap") do
        if obj:IsA("BasePart") then
            table.insert(foundGaps, {
                Position = obj.Position,
                CFrame = obj.CFrame,
                Part = obj,
                Height = obj.Position.Y,
            })
        end
    end
    
    -- Se nÃ£o achou por tag, procura por altura
    if #foundGaps == 0 then
        print("[Auto Gap] âš ï¸ No tagged gaps, scanning by height...")
        
        for _, obj in workspace:GetDescendants() do
            if obj:IsA("BasePart") and obj.Anchored then
                local pos = obj.Position
                local size = obj.Size
                
                if pos.Y >= 50 and pos.Y <= 500 then
                    if size.X >= 8 and size.Z >= 8 then
                        local isDupe = false
                        for _, gap in foundGaps do
                            if (pos - gap.Position).Magnitude < 15 then
                                isDupe = true
                                break
                            end
                        end
                        
                        if not isDupe then
                            table.insert(foundGaps, {
                                Position = pos,
                                CFrame = CFrame.new(pos),
                                Part = obj,
                                Height = pos.Y,
                            })
                        end
                    end
                end
            end
        end
    end
    
    -- Ordena por altura
    table.sort(foundGaps, function(a, b)
        return a.Height < b.Height
    end)
    
    -- Atribui UM gap para CADA Ã¡rea (Gap 1 = Common, Gap 2 = Uncommon, etc.)
    for i, gap in ipairs(foundGaps) do
        if i <= #GapDatabase then
            GapDatabase[i].Position = gap.CFrame
            print(string.format("[Auto Gap] Gap %d (%s) â†’ Y: %.1f", i, GapDatabase[i].Name, gap.Height))
        end
    end
    
    print(string.format("[Auto Gap] âœ… Found %d gaps total", math.min(#foundGaps, #GapDatabase)))
end

-- Helpers
local function getAreaNames()
    local names = {}
    for _, area in ipairs(GapDatabase) do
        if area.Position then
            table.insert(names, area.Name)
        end
    end
    return names
end

local function getAreaByName(name)
    for _, area in ipairs(GapDatabase) do
        if area.Name == name then
            return area
        end
    end
    return nil
end

local function getNextGap(currentName)
    for i, area in ipairs(GapDatabase) do
        if area.Name == currentName and i < #GapDatabase then
            if GapDatabase[i + 1].Position then
                return GapDatabase[i + 1]
            end
        end
    end
    return nil
end

-- UI SIMPLES: Select Area + Go to Area
AutoGapSection:Dropdown({
    Title  = "Select Area",
    Desc   = "Choose area to teleport (Common, Rare, Epic...)",
    Icon   = "map-pin",
    Values = {"Common", "Uncommon", "Rare", "Epic", "Legendary", "Mythical", "Cosmic", "Secret", "Celestial"},
    Value  = nil,
    Callback = function(value)
        AutoGapState.SelectedArea = value
        
        WindUI:Notify({
            Title   = "Auto Gap",
            Content = "Selected: " .. value,
            Duration= 3,
            Icon    = "map-pin",
        })
    end
})

AutoGapSection:Toggle({
    Title = "Go to Area",
    Desc  = "Teleport and auto-navigate gaps",
    Icon  = "navigation",
    Value = false,
    Callback = function(state)
        AutoGapState.Enabled = state
        
        if state then
            if not AutoGapState.SelectedArea then
                WindUI:Notify({
                    Title   = "Auto Gap",
                    Content = "âš ï¸ Select an area first!",
                    Duration= 3,
                    Icon    = "alert-triangle",
                })
                AutoGapState.Enabled = false
                return
            end
            
            WindUI:Notify({
                Title   = "Auto Gap",
                Content = "ðŸš€ Teleporting to " .. AutoGapState.SelectedArea,
                Duration= 3,
                Icon    = "navigation",
            })
        else
            AutoGapState.WaitingForWave = false
            WindUI:Notify({
                Title   = "Auto Gap",
                Content = "Stopped.",
                Duration= 3,
                Icon    = "square",
            })
        end
    end
})

-- SISTEMA PRINCIPAL (TP DIRETO + ESPERA WAVE)
RunService.Heartbeat:Connect(function(dt)
    if not AutoGapState.Enabled then
        AutoGapState.WaitingForWave = false
        return
    end

    if not AutoGapState.SelectedArea then return end

    local area = getAreaByName(AutoGapState.SelectedArea)
    if not area or not area.Position then 
        print("[Auto Gap] âš ï¸ Area not found or not scanned yet")
        return 
    end

    local hrp = getHumanoidRootPart()
    if not hrp then return end

    local targetCF = area.Position
    local playerPos = hrp.Position
    local targetPos = targetCF.Position
    
    local distToGap = (targetPos - playerPos).Magnitude
    local isAtGap = distToGap < 10
    
    -- Se ainda nÃ£o chegou no gap, TP DIRETO
    if not isAtGap then
        hrp.CFrame = targetCF + Vector3.new(0, 3, 0)
        task.wait(0.1)
        return
    end
    
    -- Chegou no gap atual, verifica waves
    local waves = WaveDetector.GetAllWaves()
    local dangerousWave = false
    
    for _, wave in waves do
        local part = WaveDetector.GetPrimaryPart(wave)
        if part then
            local wavePos = part.Position
            local waveVel = part.AssemblyLinearVelocity or Vector3.zero
            
            -- Verifica se wave estÃ¡ perigosa (< 150 studs E vindo na direÃ§Ã£o)
            if WaveDetector.IsWaveDangerous(wavePos, playerPos, 150) then
                if WaveDetector.IsWaveApproaching(wavePos, waveVel, playerPos) then
                    dangerousWave = true
                    if not AutoGapState.WaitingForWave then
                        AutoGapState.WaitingForWave = true
                        print("[Auto Gap] â¸ï¸ Waiting for wave to pass...")
                    end
                    break
                end
            end
        end
    end
    
    -- Se wave passou, vai pro prÃ³ximo gap
    if not dangerousWave and AutoGapState.WaitingForWave then
        AutoGapState.WaitingForWave = false
        print("[Auto Gap] âœ… Wave passed! Moving to next gap...")
        
        local nextGap = getNextGap(AutoGapState.SelectedArea)
        if nextGap and nextGap.Position then
            AutoGapState.SelectedArea = nextGap.Name
            WindUI:Notify({
                Title   = "Auto Gap",
                Content = "Moving to " .. nextGap.Name,
                Duration= 2,
                Icon    = "arrow-right",
            })
        else
            WindUI:Notify({
                Title   = "Auto Gap",
                Content = "âœ… Reached final gap!",
                Duration= 3,
                Icon    = "check-circle",
            })
            AutoGapState.Enabled = false
        end
    end
end)

-- Auto-scan ao iniciar
task.spawn(function()
    task.wait(3)
    GapScanner.ScanAllGaps()
end)

